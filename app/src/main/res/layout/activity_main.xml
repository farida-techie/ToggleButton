<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeL"
    android:background="@drawable/light__02"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/toggleBtn"
        android:padding="20dp"
        android:textColor="@color/red"
        android:textOff="@string/light_off"
        android:textOn="@string/light_on"
        android:drawableStart="@drawable/selete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="19dp"
        android:background="@drawable/backgroun_btn_shape"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/selete_item"
        android:layout_alignParentEnd="true" />

</RelativeLayout>